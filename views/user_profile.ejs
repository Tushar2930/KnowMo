    <div class="container profile-body">
    <% if(user.id==profile_user.id){%>

        <form action="/users/update/<%=profile_user.id%>" enctype="multipart/form-data" method="POST" style="    display: flex;
            width: 100%;
            height: 100%;
            justify-content: center;">
           <div class="pro-left">
                <h2><%=profile_user.name%></h2>
                <img src="<%=user.avatar%>" alt="<%=user.name %>" width="100">
                <label style="position: inherit;    margin: 1rem 1rem;">
                    <div style="padding: 0.5rem;
                    border: 1px solid orange;
                    background-color: orange;
                    color: white;    font-size: 1.1rem;">Upload New Photo</div>
                    <input type="file" name="avatar" placeholder="Profile picture" class="avatar-photu" style="display: none;">
                   </label>
                   <div style="text-align: center;
                   background-color: #ebffff;
                   border: 1px solid #a2d4ff;
                   font-size: smaller;
                   width: 70%;
               ">Upload a new avatar.Larger image will be resized automatically</div>
                

            </div>
            <div class="pro-right">
                <div style="    height: 15%;
                font-size: xx-large;
                padding: 1rem 1.5rem;
                color: white;
                background-color: #FFA500;
                font-weight: bold;">Edit Profile</div>
                <div class="input-data-div">
                    <h4>Name</h4><input type="text" name="name" placeholder="Your Name" value="<%=profile_user.name%>">
                    <h4>Email</h4><input type="text" name="email" placeholder="Your Email" value="<%=profile_user.email%>">
                    <h4>Year</h4><input type="number" name="year" placeholder="Graduation Year" required value="<%=profile_user.year%>">
                    <h4>College Name</h4><input type="text" name="collegeName" placeholder="Enter Your College Name..." required value="<%=profile_user.collegeName%>">
                    <input type="submit" placeholder="Update Info" style="    width: 30%;
                    padding: -0.5rem;
                    margin: 2rem 0rem;
                    background-color: orange;
                    color: white;
                    font-size: 1.4rem;
                    font-weight: 700;">
                </div>
            </div>
        </form>

        <%} else{%>
            <div style="    height: 100%;
            width: 100%;    display: flex;
    justify-content: space-between;"> 
            <div style="    height: 100%;
            width: 68%;">
            <div class="pro-root">
                <div class="pro-bg-img">
                    <div class="pro-bg-avatar"></div>
                    <div class="pro-avatar"><img src="<%=profile_user.avatar%>" alt="<%=profile_user.name%>"></div>
                </div>
                    <div class="pro-name"><h4><%=profile_user.name%></h4>
                    <h6><%=user.collegeName%> @ <%=user.year%></h6></div>
            </div>
            <div class="pro-posts"></div>
        </div>
        <div class="pro-followers">
            <div style="background-color: white; width: 100%;   height: fit-content;" class="ans-right-col"><div class="follow-head">People to follow</div>
            <div class="followers-container">
               
                <%for(user of all_users){%>
                    <div class="follower-item">
                        <div class="avatar-1 follower-image">
                            <a href="/users/profile/<%=user.id%>">
                                <img class="avatar-1" src="<%=user.avatar%>" alt="username">
                            </a>
                        </div>
                        <div class="post-heading follower-name">
                            <div>
                            <h5 style="font-size: 1rem;"><%=user.name %></h5>
                            <small>Web devloper</small></div>
                              </div>
                              <div style="display: flex;
                              justify-content: center;
                              align-items: center;" class="follow-btn"><i class="fa-regular fa-plus add-btn"></i></div>
                    </div>
                    <%}%>
            </div>
        <div style="display: flex;
        align-items: center;">
            <h4 style="font-size: 1rem;padding: 0.3rem;margin: -0.5rem 0.7rem;
            margin-bottom: 0.5rem;" class="sm-btn">Show More</h4>
        </div></div>
        </div>
    </div>


            <%}%>
</div>